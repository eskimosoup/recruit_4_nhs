<header class="row">
  <div class="small-12 columns">
    <div class="red">
      <div class="row">
        <div class="small-6 columns">
          <%= image_tag "logo.jpg", alt: global_site_settings['Name'], title: global_site_settings['Name'], class: "centred" %>
        </div>
        <div class="small-6 columns">
          <p>
            Specialist healthcare recruitment
            <% unless global_site_settings["phone"].blank? %>
              <br/>
              Call today: <%= global_site_settings["phone"] %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</header>
