<%= form_for @application do |f| %>
  <%= field_set_tag "Your Details" do %>

    <% if @application.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize @application.errors.count, "error" %> prevented your application from being sent</h2>

        <ul>
          <% @application.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="small-12 columns field first">
        <%= f.text_field :name, placeholder: "Name" %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-4 columns field">
        <%= f.text_field :grade, placeholder: "Grade" %>
      </div>
      <div class="small-12 medium-4 columns field">
        <%= f.text_field :speciality, placeholder: "Speciality" %>
      </div>
      <div class="small-12 medium-4 columns field">
        <%= f.text_field :date, placeholder: "Date available for locums" %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-4 columns field">
        <%= f.email_field :email, placeholder: "Email" %>
      </div>
      <div class="small-12 medium-4 columns field">
        <%= f.text_field :phone_number, placeholder: "Tel" %>
      </div>
      <div class="small-12 medium-4 columns field">
        <%= f.file_field :cv %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-4 columns field">
        <%= f.select :how_heard, options_for_select(Application::HOW_HEARD), prompt: 'How did you hear about this offer?' %>
      </div>
      <div class="small-12 medium-8 columns field">
        <%= f.text_field :how_heard_other, placeholder: "Please tell us how you heard about this offer if you selected 'Other' from the previous drop down" %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns field">
        <%= f.text_area :additional_information, placeholder: "Additional Information" %>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
